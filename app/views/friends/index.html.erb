

<table class = "table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Twitter</th>
      <th>Info</th>
      <th>Blogs</th>

    </tr>
  </thead>

  <tbody>
  <% @friends.each do |friend| %>
    <tr>
      <td><%= friend.first_name %></td>
      <td><%= friend.last_name %></td>
      <td><%= friend.email %></td>
      <td><%= friend.twitter %></td>

      <td><%= link_to "Show User info", friend, class: "btn btn-outline-info" %></td>
      <td><%= link_to "Show User Blogs",  friend_blogs_path(friend), class: "btn btn-outline-info"%></td>

 </tr>
  <% end %>
  </tbody>

</table>
</br>

<%= link_to 'Add new users With blog', new_friend_path, class: "btn btn-outline-success" %>




