<div class="mt-4 p-5 bg-light text-black rounded">
  <h1 class="display-4">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>
  <p class="lead"><%= @friend.email %> | <%= @friend.twitter%>
  </p>
  <hr class="my-4">

  </br>
  <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-secondary"%>  |
  <%= link_to "Back", friends_path, class:"btn btn-primary"%>
  <br/>
  <br/>

  <%= button_to "Delete", @friend, method: :delete, data: {confirm:"Are you sure?"}, class:"btn btn-danger"%>
</div>



